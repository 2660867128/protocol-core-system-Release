# 基础配置
DEBUG=True
SECRET_KEY=django-insecure-protocol-core-2024-secret-key-change-in-production

# 数据库配置
DATABASE_URL=sqlite:///protocol_core.db

# 协议服务配置
PROTOCOL_PASSWORD=your-protocol-password
FLASK_PORT=9900

# 反爬虫配置
ANTI_CRAWLER_ENABLED=True
ANTI_CRAWLER_MAX_REQUESTS_PER_MINUTE=60
ANTI_CRAWLER_BLOCK_DURATION=300

# 邮件配置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
